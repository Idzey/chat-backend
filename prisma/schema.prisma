generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}


model Chat {
  id           String     @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  name         String?
  type         ChatType   @default(PRIVATE)
  avatar       String?
  isActive     Boolean    @default(true)
  createdAt    DateTime   @default(now()) @db.Timestamptz(6)
  updatedAt    DateTime   @default(now()) @updatedAt @db.Timestamptz(6)
  messages     Message[]
  participants UserChat[]

  @@index([type])
  @@index([isActive])
  @@map("chats")
}

model Message {
  id        String        @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  chatId    String        @db.Uuid
  userId    String        @db.Uuid
  content   String
  type      MessageType   @default(TEXT)
  isEdited  Boolean       @default(false)
  replyToId String?       @db.Uuid
  fileId    String?       @db.Uuid
  duration  Int?          
  createdAt DateTime      @default(now()) @db.Timestamptz(6)
  updatedAt DateTime      @default(now()) @updatedAt @db.Timestamptz(6)
  reads     MessageRead[]
  chat      Chat          @relation(fields: [chatId], references: [id], onDelete: Cascade, map: "fk_chat_msg")
  sender    Users         @relation(fields: [userId], references: [id], onDelete: Cascade, map: "fk_user_msg")
  file      File?         @relation(fields: [fileId], references: [id], onDelete: SetNull)

  @@index([chatId, createdAt])
  @@index([userId])
  @@index([fileId])
  @@map("messages")
}

model MessageRead {
  id        String   @id @default(cuid())
  messageId String   @db.Uuid
  userId    String   @db.Uuid
  readAt    DateTime @default(now()) @db.Timestamptz(6)
  message   Message  @relation(fields: [messageId], references: [id], onDelete: Cascade)
  user      Users    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([messageId, userId])
  @@index([userId, readAt])
  @@map("message_reads")
}

model UserChat {
  id         String    @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  userId     String    @db.Uuid
  chatId     String    @db.Uuid
  role       ChatRole  @default(MEMBER)
  joinedAt   DateTime  @default(now()) @db.Timestamptz(6)
  lastReadAt DateTime? @db.Timestamptz(6)
  chat       Chat      @relation(fields: [chatId], references: [id], onDelete: Cascade, map: "fk_chat_user")
  user       Users     @relation(fields: [userId], references: [id], onDelete: Cascade, map: "fk_user_chat")

  @@unique([userId, chatId])
  @@index([chatId])
  @@index([userId])
  @@map("user_chats")
}

model Users {
  id           String        @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  username     String        @unique
  name         String?
  email        String        @unique
  avatar       String?
  passwordHash String?
  status       UserStatus    @default(OFFLINE)
  lastSeen     DateTime?     @db.Timestamptz(6)
  createdAt    DateTime      @default(now()) @db.Timestamptz(6)
  updatedAt    DateTime      @updatedAt @db.Timestamptz(6)
  messageReads MessageRead[]
  sentMessages Message[]
  userChats    UserChat[]
  uploadedFiles File[]
  refreshTokens RefreshToken[]

  @@index([status])
  @@index([lastSeen])
  @@map("users")
}


model File {
  id        String    @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  filename  String
  originalName String
  mimeType  String
  size      Int
  path      String
  url       String?
  uploadedBy String   @db.Uuid
  createdAt DateTime  @default(now()) @db.Timestamptz(6)
  updatedAt DateTime  @updatedAt @db.Timestamptz(6)
  uploader  Users     @relation(fields: [uploadedBy], references: [id], onDelete: Cascade)
  type      FileType  @default(FILE)
  messages  Message[] 

  @@index([uploadedBy])
  @@index([mimeType])
  @@index([type])
  @@map("files")
}

model RefreshToken {
  id         String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  userId     String   @db.Uuid
  token      String   @unique
  expiresAt  DateTime @db.Timestamptz(6)
  createdAt  DateTime @default(now()) @db.Timestamptz(6)
  user       Users    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([expiresAt])
  @@map("refresh_tokens")
}

enum FileType {
  IMAGE
  AUDIO
  FILE
}

enum ChatType {
  PRIVATE
  GROUP
}

enum UserStatus {
  ONLINE
  OFFLINE
}

enum MessageType {
  TEXT
  IMAGE
  FILE
  VOICE
  VIDEO
}

enum ChatRole {
  ADMIN
  MODERATOR
  MEMBER
}
